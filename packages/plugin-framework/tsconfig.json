{
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "declaration": false,
    "sourceMap": false,
    "baseUrl": "./",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,

    // ignore node_modules/@types - express typings raise errors
    "types": ["node"],

    "lib": [
      "es2017",
      "dom"
    ]
  }
}
