{
  "compilerOptions": {
    "target": "ES2015",
    "declaration": false,
    "sourceMap": false,
    "baseUrl": "./",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,

    // activated for issue #94
    // svelte requires this option
    "importsNotUsedAsValues": "error",

    "lib": [
      "es2017",
      "dom"
    ],

    "paths": {
      "@protobuf-ts/*": ["../*/src"]
    },

  }
}
