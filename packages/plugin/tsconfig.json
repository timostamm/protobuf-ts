{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build/",
    "importHelpers": false,
    "module": "CommonJS",
    "target": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,

    // ignore node_modules/@types - express typings raise errors
    "typeRoots": [],

    "lib": [
      "es2017",
      "dom"
    ]
  }
}
