{
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "declaration": false,
    "sourceMap": false,
    "baseUrl": "./",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,

    // ignore node_modules/@types - express typings raise errors
    "typeRoots": [],

    // activated for issue #94
    // svelte requires this option
    "importsNotUsedAsValues": "error",

    "lib": [
      "es2017",
      "dom",
      "ES2018.AsyncIterable"
    ]
  }
}
